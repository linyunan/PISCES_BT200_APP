<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/f3f3f3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/ffffff">

        <RelativeLayout
            android:id="@+id/rly_disposable_user"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_disposable_user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="用户"
                android:textColor="@color/A333333"
                android:textSize="15.2sp" />

            <ImageView
                android:id="@+id/img_down_up"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:paddingRight="10dp"
                android:src="@mipmap/btn_down"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tv_divide"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/f3f3f3"/>

        <ImageView
            android:id="@+id/img_shadow_head"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow"
            android:alpha="30"
            android:visibility="gone"/>

        <RelativeLayout
            android:id="@+id/rly_time_detail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/f7f7f7"
            android:orientation="horizontal"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="15dp"
                    android:text="密码:"
                    android:textColor="@color/A666666"
                    android:textSize="15.2sp" />

                <TextView
                    android:id="@+id/tv_disposable_user_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="123456789"
                    android:textColor="@color/A666666"
                    android:textSize="15.2sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingRight="15dp"
                android:layout_alignParentRight="true">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="次数:"
                    android:textColor="@color/A666666"
                    android:textSize="15.2sp" />

                <TextView
                    android:id="@+id/tv_times"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:paddingLeft="20dp"
                    android:text="一天"
                    android:textColor="@color/A666666"
                    android:textSize="15.2sp" />
            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:id="@+id/img_shadow_tail"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow"
            android:alpha="30"
            android:visibility="gone"/>

    </LinearLayout>

</LinearLayout>