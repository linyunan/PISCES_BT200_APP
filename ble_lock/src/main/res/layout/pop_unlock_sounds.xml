<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/A333333"
            android:gravity="center"
            android:textSize="14sp"
            android:text="提示音"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/A999999"/>

        <!--<GridView-->
            <!--android:id="@+id/gv_sounds"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:numColumns="3"></GridView>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/lly_unlock_no_music"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/img_unlock_music_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_music" />

                    <TextView
                        android:id="@+id/tv_unlock_music_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="无"
                        android:textColor="@color/A04a8ec"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd" />

                <LinearLayout
                    android:id="@+id/lly_unlock_music1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/img_unlock_music_icon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_no_music" />

                    <TextView
                        android:id="@+id/tv_unlock_music_name1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="铃声1"
                        android:textColor="@color/A333333"
                        android:textSize="10sp" />
                </LinearLayout>

                <TextView
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:background="@color/dddddd" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp"
                    android:visibility="invisible">

                    <ImageView
                        android:id="@+id/img_music_icon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/btn_no_music" />

                    <TextView
                        android:id="@+id/tv_music_name3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="无"
                        android:textColor="@color/A333333"
                        android:textSize="10sp" />
                </LinearLayout>
            </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dddddd"/>

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_dddddd">

        <TextView
            android:id="@+id/tv_unlock_ok"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/A04a8ec"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/gray_button_selector"
            android:textSize="14sp"
            android:text="确认"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>