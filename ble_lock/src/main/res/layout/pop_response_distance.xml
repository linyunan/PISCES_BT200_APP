<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="设备感应距离"
            android:textColor="@color/A333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/A999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5m"
                android:textColor="@color/A333333"
                android:textSize="14sp" />

            <SeekBar
                android:id="@+id/sb_distance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:max="10" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_start_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1m"
                    android:layout_marginLeft="15dp"
                    android:textColor="@color/A333333"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_end_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="10m"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/A333333"
                    android:layout_marginRight="15dp"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dddddd" />

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_dddddd">

        <TextView
            android:id="@+id/tv_response_distance_ok"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:background="@drawable/gray_button_selector"
            android:gravity="center"
            android:text="确认"
            android:textColor="@color/A04a8ec"
            android:textSize="14sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>