<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/ffffff"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:text="添加新用户"
            android:textColor="@color/A333333"
            android:textSize="14sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/A999999" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="密码："
                    android:textColor="@color/A555555"
                    android:textSize="12sp" />

                <EditText
                    android:id="@+id/et_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="number"
                    android:maxLength="6"
                    android:background="@color/A00000000"
                    android:paddingLeft="10dp"
                    android:textColor="@color/A555555"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dddddd" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:text="次数:"
                    android:textColor="@color/A555555"
                    android:textSize="12sp" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rb_one_time"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_margin="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_04a8ec_ffffff"
                        android:button="@null"
                        android:gravity="center"
                        android:text="单次"
                        android:textColor="@color/selector_555555_ffffff"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rb_one_day"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_04a8ec_ffffff"
                        android:button="@null"
                        android:gravity="center"
                        android:text="一天"
                        android:textColor="@color/selector_555555_ffffff"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rb_one_week"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_04a8ec_ffffff"
                        android:button="@null"
                        android:gravity="center"
                        android:text="一周"
                        android:textColor="@color/selector_555555_ffffff"
                        android:textSize="12sp" />

                    <RadioButton
                        android:id="@+id/rb_one_month"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/bg_04a8ec_ffffff"
                        android:button="@null"
                        android:gravity="center"
                        android:text="一个月"
                        android:textColor="@color/selector_555555_ffffff"
                        android:textSize="12sp" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dddddd" />

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_dddddd">

            <TextView
                android:id="@+id/tv_pop_add"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/gray_button_selector"
                android:gravity="center"
                android:text="添加"
                android:textColor="@color/A04a8ec"
                android:textSize="14sp" />

        </LinearLayout>



    </LinearLayout>

</LinearLayout>