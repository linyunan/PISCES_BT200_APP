                android:layout_height="4dp"
                android:background="@drawable/shadow"
                android:alpha="30" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_divide_3"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:visibility="gone"/>

