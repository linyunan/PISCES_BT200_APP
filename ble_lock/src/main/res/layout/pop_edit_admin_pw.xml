<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@color/ffffff"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/A333333"
            android:gravity="center"
            android:textSize="14sp"
            android:text="修改管理员密码"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/A999999"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lly_old_pw"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textColor="@color/A555555"
                    android:textSize="12sp"
                    android:text="旧密码："/>

                <EditText
                    android:id="@+id/et_old_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:inputType="number"
                    android:maxLength="6"
                    android:textColor="@color/A555555"
                    android:background="@color/A00000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dddddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textColor="@color/A555555"
                    android:textSize="12sp"
                    android:text="新密码："/>

                <EditText
                    android:id="@+id/et_new_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textColor="@color/A555555"
                    android:background="@color/A00000000"
                    android:textSize="12sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/dddddd"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:paddingLeft="20dp"
                    android:textColor="@color/A555555"
                    android:textSize="12sp"
                    android:text="确认密码："/>

                <EditText
                    android:id="@+id/et_confirm_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="10dp"
                    android:maxLength="6"
                    android:inputType="number"
                    android:textColor="@color/A555555"
                    android:background="@color/A00000000"
                    android:textSize="12sp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/dddddd"/>

        <LinearLayout
            android:layout_width="201dp"
            android:layout_height="41dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/rectangle_dddddd">

        <TextView
            android:id="@+id/tv_save"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:textColor="@color/A04a8ec"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/gray_button_selector"
            android:textSize="14sp"
            android:text="保存"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>